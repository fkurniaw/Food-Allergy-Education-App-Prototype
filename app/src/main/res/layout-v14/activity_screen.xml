<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.felix.Allergenius.SCREEN"
    android:orientation="vertical"
    android:weightSum="1">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Serving!"
        android:id="@+id/start"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:maxHeight="50dp"
        android:minHeight="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_row="0"
        android:layout_column="2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Instructions: Feed the customers the right food, and make sure you don&apos;t feed them food they are allergic to! If a customer gets an allergic reaction, administer first-aid properly!"
        android:id="@+id/textView2"
        android:minHeight="125dp"
        android:minWidth="20dp"
        android:maxWidth="100dp"
        android:gravity="center|center_vertical|top"
        android:layout_above="@+id/pizza"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_row="3"
        android:layout_column="2" />

    <TextView
        android:layout_width="75dp"
        android:layout_height="100dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Here are your dishes!"
        android:id="@+id/textView3"
        android:layout_row="4"
        android:layout_column="2"
        android:layout_gravity="center_horizontal|fill"
        android:gravity="center_horizontal"
        android:visibility="invisible" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/muffin"
        android:layout_below="@+id/pizza"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="57dp"
        android:layout_row="4"
        android:layout_column="3"
        android:minHeight="50dp"
        android:minWidth="60dp"
        android:src="@mipmap/muffin"
        android:visibility="invisible"
        android:layout_gravity="fill" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/burger"
        android:layout_below="@+id/muffin"
        android:layout_alignLeft="@+id/start"
        android:layout_alignStart="@+id/start"
        android:minHeight="50dp"
        android:nestedScrollingEnabled="false"
        android:minWidth="60dp"
        android:src="@mipmap/burgers"
        android:layout_row="6"
        android:layout_column="0"
        android:layout_gravity="fill"
        android:visibility="invisible" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/salad"
        android:layout_centerHorizontal="true"
        android:maxHeight="50dp"
        android:minHeight="50dp"
        android:minWidth="55dp"
        android:layout_gravity="center|fill_vertical"
        android:src="@mipmap/salads"
        android:layout_row="6"
        android:layout_column="1"
        android:visibility="invisible" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pizza"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_row="6"
        android:layout_column="2"
        android:src="@mipmap/pizzas"
        android:minWidth="50dp"
        android:minHeight="50dp"
        android:layout_gravity="fill"
        android:visibility="invisible" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/smoothie"
        android:layout_below="@+id/pizza"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_row="6"
        android:layout_column="4"
        android:minHeight="50dp"
        android:minWidth="60dp"
        android:src="@mipmap/smoothie"
        android:visibility="invisible"
        android:layout_gravity="center_vertical|left" />

</GridLayout>
