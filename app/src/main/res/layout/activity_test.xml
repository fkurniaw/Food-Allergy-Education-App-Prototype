<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.felix.Allergenius.test"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="apple"
        android:id="@+id/textApple"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_weight="1"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="pear"
        android:id="@+id/textPear"
        android:layout_below="@+id/textApple"
        android:layout_alignParentLeft="true"
        android:layout_weight="1"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="orange"
        android:id="@+id/textOrange"
        android:layout_below="@+id/textPear"
        android:layout_alignParentLeft="true"
        android:layout_weight="1"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="dragonfruit"
        android:id="@+id/textDragonFruit"
        android:layout_below="@+id/textOrange"
        android:layout_alignParentLeft="true"
        android:layout_weight="1"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="dropbox"
        android:id="@+id/textDropBox"
        android:layout_below="@+id/textDragonFruit"
        android:layout_alignParentLeft="true"
        android:layout_weight="1"
        android:layout_gravity="center_horizontal" />
</LinearLayout>
